<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLayoutStyle"
    android:paddingHorizontal="@dimen/p16"
    tools:context=".SearchActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/p28"
        >
        <Button
            android:id="@+id/back_btn"
            style="@style/HeaderBtnStyle"
            />

        <TextView
            style="@style/HeaderTextStyle"
            android:text="@string/search_page"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/search_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_page"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="30"
            />
        <ImageView
            android:id="@+id/clear_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_close"
            android:contentDescription="@string/clear_btn_alt"
            android:visibility="gone"
            />
    </FrameLayout>

</LinearLayout>