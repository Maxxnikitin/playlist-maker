<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/p14</item>
        <item name="android:paddingBottom">@dimen/p28</item>
    </style>
    <style name="MainBtnStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">@dimen/corner_radius_size_primary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/p10</item>
        <item name="iconTint">@color/black</item>
    </style>
    <style name="SettingsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_settings</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:layout_gravity">start</item>
    </style>
    <style name="SettingsIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>
    <style name="SettingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/p21</item>
        <item name="android:paddingStart">@dimen/p16</item>
    </style>
    <style name="HeaderBtnStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/p48</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="icon">@drawable/ic_arrow_back</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:layout_marginRight">@dimen/p12</item>
    </style>
    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/p48</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:gravity">center</item>
    </style>
</resources>